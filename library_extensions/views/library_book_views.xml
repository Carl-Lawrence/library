<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- 1) Attempt to inherit existing library book tree view to add columns -->
  <record id="view_library_book_tree_inherit_author_category" model="ir.ui.view">
    <field name="name">library.book.tree.inherit.author.category</field>
    <!-- CHANGE inherit_id if your library module uses different external id -->
    <field name="inherit_id" ref="library.view_book_tree" />
    <field name="model">library.book</field>
    <field name="arch" type="xml">
      <!-- Insert author and categories as columns near the front -->
      <xpath expr="//tree" position="inside">
        <field name="author_id" />
        <field name="category_id" />
      </xpath>
    </field>
  </record>

  <!-- 2) Attempt to inherit existing library book form view to show the fields -->
  <record id="view_library_book_form_inherit_author_category" model="ir.ui.view">
    <field name="name">library.book.form.inherit.author.category</field>
    <!-- CHANGE inherit_id if your library module uses different external id -->
    <field name="inherit_id" ref="library.view_book_form" />
    <field name="model">library.book</field>
    <field name="arch" type="xml">
      <!-- Insert author and categories in form header or first sheet block -->
      <xpath expr="//form/sheet" position="inside">
        <group>
          <field name="author_id"/>
          <field name="category_id" widget="many2many_tags"/>
        </group>
      </xpath>
    </field>
  </record>

  <!-- 3) Standalone tree view for library.book (fallback if inherit fails) -->
  <record id="view_library_book_tree_extension" model="ir.ui.view">
    <field name="name">library.book.tree.extension</field>
    <field name="model">library.book</field>
    <field name="arch" type="xml">
      <tree string="Books with author and categories" version="7.0">
        <field name="name"/>
        <field name="author_id"/>
        <field name="category_id"/>
      </tree>
    </field>
  </record>

  <!-- 4) Standalone form view for library.book (fallback) -->
  <record id="view_library_book_form_extension" model="ir.ui.view">
    <field name="name">library.book.form.extension</field>
    <field name="model">library.book</field>
    <field name="arch" type="xml">
      <form string="Book">
        <sheet>
          <group>
            <field name="name"/>
            <field name="author_id"/>
            <field name="category_id" widget="many2many_tags"/>
          </group>
          <notebook>
            <page string="Notes">
              <field name="notes" />
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
